<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.MainController" stylesheets="@style.css">

    <!-- Barra de menú superior -->
    <top>
        <MenuBar>
            <Menu text="Archivo">
                <MenuItem text="Abrir" onAction="#onAbrirMenuItemClicked"/>
                <MenuItem text="Salir" onAction="#onSalirMenuItemClicked"/>
            </Menu>
            <Menu text="Biblioteca">
                <MenuItem text="Actualizar"/>
            </Menu>
            <Menu text="Ver">
                <MenuItem text="Pantalla Completa"/>
            </Menu>
            <Menu text="Acerca">
                <MenuItem text="Información"/>
            </Menu>
        </MenuBar>
    </top>

    <!-- Área central -->
    <center>
        <SplitPane orientation="HORIZONTAL" dividerPositions="0.25, 0.75">
            <!-- Panel izquierdo (Editor de video) -->
            <VBox spacing="10" style="-fx-padding: 10px;">
                <Label text="Editor de Video" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Button text="Cambiar Tamaño"/>
                <Button text="Cambiar Velocidad"/>
            </VBox>

            <!-- Panel central (Reproductor) -->
            <VBox alignment="CENTER" spacing="10">
                <StackPane style="-fx-background-color: black; -fx-padding: 10px; -fx-pref-width: 640px; -fx-pref-height: 360px;">
                    <MediaView fx:id="mediaView" preserveRatio="true"/>
                </StackPane>

                <VBox spacing="5" style="-fx-padding: 10px;">
                    <Slider fx:id="progressSlider" min="0" max="100" value="0" style="-fx-pref-width: 500px;"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="▶" fx:id="playButton" onAction="#onPlayButtonClicked"/>
                        <Button text="⏸" fx:id="pauseButton" onAction="#onPauseButtonClicked"/>
                        <Button text="⏹" fx:id="stopButton" onAction="#onStopButtonClicked"/>
                        <Label text="Volumen:"/>
                        <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" style="-fx-pref-width: 150px;"/>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Panel derecho (Biblioteca) -->
            <VBox spacing="10" style="-fx-padding: 10px;">
                <Label text="Biblioteca" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <ListView fx:id="fileListView"/>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
